{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "src/sw.ts", "src/**/__tests__/*.ts", "src/translations/*"],
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "composite": true,
    "strict": false,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "types": ["facebook-js-sdk", "gapi"],
    "paths": {
      "@/*": ["./src/*"]
    },
    // "importsNotUsedAsValues": "preserve"
  }
}
